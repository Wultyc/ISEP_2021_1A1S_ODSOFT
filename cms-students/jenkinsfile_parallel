#!/usr/bin/env groovy 

pipeline {
	agent any

	stages {
	    stage('Stage 1') {
			steps{
                echo 'Running ${env.BUILD_ID} on ยง{env.JENKINS_URL}
			}
        }    
	    stage('Stage 2') {
			parallel {
                stage('Stage 2.1'){
                    steps{
				        echo 'Hello world (Parallel 1)'
			        }
                }
                stages('Stage 2.2'){    
                    steps{
				        echo 'Hello world (Parallel 2)'
			        }
                }
            }
		}
    }
} 
